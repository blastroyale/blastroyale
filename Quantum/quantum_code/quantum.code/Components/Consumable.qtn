component Consumable
{
	[HideInInspector] ConsumableType ConsumableType;
	[HideInInspector] UInt32 PowerAmount;
}

enum ConsumableType
{
	Health,
	Rage,
	Weapon,
	Ammo,
	InterimArmour,
}

synced event OnConsumablePicked
{
	player_ref Player;
	entity_ref PlayerEntity;
	entity_ref ConsumableEntity;
	Consumable Consumable;
}

signal ConsumablePicked(player_ref player, entity_ref consumable);