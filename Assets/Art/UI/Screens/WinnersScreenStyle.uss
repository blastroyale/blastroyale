.hidden {
    transition-property: display;
    transition-delay: 1s;
}

.hidden .title-holder {
    opacity: 0;
    translate: -200px 0;
    transition-property: opacity, translate;
    transition-duration: 0.5s, 0.5s;
    transition-delay: 0.5s, 0.5s;
}

.player-name-container {
    flex-grow: 1;
    position: absolute;
    width: 100%;
    height: 100%;

}


.safe-area {
    align-items: center;
}
