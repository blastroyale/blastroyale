.equipment-card {
    width: 308px;
    height: 328px;
    transition-property: scale;
    transition-duration: 0.2s;
    top: 270px;
}

.equipment-card--marketplace .equipment-card__level {
    display: none;
}

.equipment-card--marketplace .equipment-card__badge-holder {
    display: none;
}

.equipment-card--marketplace .equipment-card__notification {
    display: none;
}

.equipment-card__background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: var(--sprite-equipmentcard__card-background);
}

.equipment-card:active .equipment-card__background {
    background-image: var(--sprite-equipmentcard__card-background-pressed);
}

.equipment-card--selected {
    scale: 1.1 1.1;
}

.equipment-card--highlighted {
}

.equipment-card__selected-bg {
    position: absolute;
    top: -35px;
    left: -42px;
    right: -38px;
    bottom: -37px;
    opacity: 0;
    transition-property: opacity;
    transition-duration: 0.2s;
}

.equipment-card--highlighted .equipment-card__highlight {
    position: absolute;
    top: 0;
    left: -7px;
    right: -6px;
    bottom: -10px;
    background-image: var(--sprite-home__card-shadow-pink);
}

.equipment-card--selected .equipment-card__selected-bg {
    opacity: 1;
    background-image: var(--sprite-home__card-selected);
}

.equipment-card__card-holder {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    flex-direction: column-reverse;
}

.equipment-card:active .equipment-card__card-holder {
    top: 4px;
    left: 4px;
    right: -4px;
    bottom: -4px;
}

.equipment-card__rarity {
    width: 291px;
    height: 237px;
    position: absolute;
    left: 9px;
    top: 2px;
}

.equipment-card__plus-rarity {
    width: 252px;
    height: 188px;
    position: absolute;
    left: 30px;
    top: 19px;
    -unity-background-scale-mode: scale-to-fit;
    background-image: var(--sprite-equipmentcard__card-plusrarity);
}

.equipment-card__image {
    width: 294px;
    height: 237px;
    position: absolute;
    left: 9px;
    top: 2px;
    -unity-background-scale-mode: scale-to-fit;
}

.equipment-card__image--shadow {
    left: 14px;
    top: 7px;
    -unity-background-image-tint-color: black;
}

.equipment-card__grade {
    position: absolute;
    color: rgb(255, 255, 255);
    font-size: 36px;
    left: 34px;
    -unity-text-outline-width: 1px;
    -unity-text-outline-color: rgb(0, 0, 0);
    top: 4px;
    padding: 0;
    margin: 0;
    -unity-font-style: normal;
}

.equipment-card__faction {
    position: absolute;
    width: 56px;
    height: 56px;
    top: 180px;
    left: 15px;
}

.equipment-card__material {
    position: absolute;
    left: -10px;
    bottom: -3px;
    width: 48px;
    height: 48px;
}

.equipment-card__level {
    font-size: 32px;
    color: rgb(248, 202, 44);
    padding: 3px 10px 0 18px;
    margin: 0;
    background-image: var(--sprite-equipmentcard__card-levelbg);
    position: absolute;
    right: 25px;
    bottom: 87px;
}

.equipment-card__name {
    position: absolute;
    bottom: 10px;
    left: 10px;
    right: 34px;
    color: rgb(255, 255, 255);
    height: 45px;
    -unity-text-align: middle-center;
    font-size: 32px;
    margin: 0;
    padding: 0;
}

.equipment-card__adj-cat-holder {
    position: absolute;
    bottom: 52px;
    right: 34px;
    left: 10px;
    height: 32px;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.equipment-card__category {
    width: 34px;
    height: 34px;
}

.equipment-card__adjective {
    color: rgb(148, 140, 198);
    font-size: 24px;
    -unity-text-align: middle-left;
}

.equipment-card__badge-holder {
    position: absolute;
    top: -15px;
    left: 28px;
    right: 7px;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.equipment-card__badge-nft {
    background-image: var(--sprite-equipmentcard__card-badge-nft);
    width: 66px;
    height: 28px;
    position: relative;
    margin: 2px;
}

.equipment-card__badge-loaned {
    background-image: none;
    -unity-text-align: middle-center;
    font-size: 24px;
    color: rgb(255, 255, 255);
    padding: 2px 15px 0;
    background-color: rgb(216, 75, 121);
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-radius: 8px;
    border-left-color: rgb(176, 60, 98);
    border-right-color: rgb(176, 60, 98);
    border-top-color: rgb(176, 60, 98);
    border-bottom-color: rgb(176, 60, 98);
    margin: 2px;
}

.equipment-card__badge-equipped {
    -unity-text-align: middle-center;
    font-size: 24px;
    color: rgb(45, 41, 80);
    padding: 2px 15px 0;
    background-color: rgb(248, 199, 46);
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-left-color: rgb(0, 0, 0);
    border-right-color: rgb(0, 0, 0);
    border-top-color: rgb(0, 0, 0);
    border-bottom-color: rgb(0, 0, 0);
    border-radius: 8px;
    margin: 2px;
}

.equipment-card__notification {
    position: absolute;
    top: -17px;
    right: -13px;
}
