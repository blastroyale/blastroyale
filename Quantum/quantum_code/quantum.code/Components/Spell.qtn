component Spell
{
	UInt32 Id;
	entity_ref Victim;
	entity_ref Attacker;
	entity_ref SpellSource; // It can be the attacker or a projectile from the attacker
	Int32 TeamSource;
	UInt32 PowerAmount;
	FPVector3 OriginalHitPosition;
	FP Cooldown;
	FP NextHitTime;
	FP EndTime;
}

synced event OnSpellHit
{
	entity_ref Entity;
	Spell Spell;
}