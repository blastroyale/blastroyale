.winner-banner {
    position: absolute;
    background-image: url('project://database/Assets/Art/UI/Sprites/MatchEnd/PlayerWonBadge.png?fileID=21300000&guid=5a038245d3ee241619c87feb2764ba89&type=3#PlayerWonBadge');
    width: 1001px;
    height: 434px;
    transition-property: opacity, scale;
    transition-duration: 0.2s, 0.2s;
}

.hidden .winner-banner {
    opacity: 0;
    scale: 1.3 1.3;
}

.winner-banner__title {
    width: 260px;
    top: 160px;
    rotate: -10deg;
    left: 230px;
    font-size: 58px;
    color: rgb(185, 65, 21);
    transition-property: opacity, scale;
    transition-delay: 0.2s, 0.2s;
    transition-duration: 0.2s, 0.2s;
}

.hidden .winner-banner__title {
    opacity: 0;
    scale: 1.3 1.3;
}

.winner-banner__player-name {
    width: 260px;
    top: 130px;
    rotate: -10deg;
    left: 290px;
    text-shadow: 4px 4px 0 rgb(185, 65, 21);
    -unity-text-outline-color: rgb(185, 65, 21);
    font-size: 58px;
    -unity-text-outline-width: 2px;
    color: rgb(255, 255, 255);
    transition-property: opacity, scale;
    transition-delay: 0.3s, 0.3s;
    transition-duration: 0.2s, 0.2s;
}

.hidden .winner-banner__player-name {
    opacity: 0;
    scale: 1.3 1.3;
}