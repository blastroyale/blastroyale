component Hazard
{
	GameId GameId;
	EntityRef Attacker;
	Int32 TeamSource;
	FP Radius;
	FP EndTime;
	FP Interval;
	FP NextTickTime;
	FP PowerAmount;
	UInt32 Knockback;
	FP StunDuration;
	UInt32 MaxHitCount;
}

synced event OnHazardLand 
{
	GameId sourceId;
	FPVector3 HitPosition;
	entity_ref AttackerEntity;
}

synced event OnHazardHit
{
 	entity_ref Hazard;
 	entity_ref HitEntity;
 	FPVector3 HitPosition;
 }