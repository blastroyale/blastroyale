component AirDrop
{
	FPVector3 Position;
	FPVector2 Direction;
	FP StartTime;
	FP Delay;
	FP Duration;
	AirDropStage Stage;
	GameId Chest;
}

enum AirDropStage
{
	Waiting,
	Announcing,
	Dropped
}

synced event OnAirDropDropped
{
	entity_ref Entity;
	AirDrop AirDrop;
}

synced event OnAirDropLanded
{
	entity_ref Entity;
	entity_ref ChestEntity;
	AirDrop AirDrop;
}

synced event OnAirDropCollected
{
	entity_ref Entity;
	entity_ref PlayerEntity;
	AirDrop AirDrop;
}